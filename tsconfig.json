{
  "compilerOptions": {
    "module": "ES2015",
    "target": "es6",
    "outDir": "TypescriptBuild",
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "includes": ["src"]
}
